{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": true,
        // "declarationDir": "./dist",
        "module": "CommonJS",
        "moduleResolution": "node",
        // "allowJs": true,
        // "emitDecoratorMetadata": true,
        // "experimentalDecorators": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es6"
        ],
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ]
}
  