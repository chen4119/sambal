{
    "name": "sambal",
    "version": "0.0.63",
    "description": "A linked data static site generator",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/chen4119/sambal"
    },
    "author": "Wan Chun Chen",
    "license": "MIT",
    "keywords": [
        "schema.org",
        "semantic web",
        "json-ld",
        "linked data",
        "static site generator"
    ],
    "workspaces": [
        "mock-theme"
    ],
    "engines": {
        "node": ">=16.0.0"
    },
    "bin": {
        "sambal": "./bin/sambal"
    },
    "scripts": {
        "init": "ts-node src/cli.ts init",
        "start": "ts-node src/cli.ts build",
        "test": "jest --runInBand",
        "test:coverage": "jest --runInBand --coverage",
        "build": "npm run clean && tsc",
        "clean": "rimraf ./dist",
        "serve": "ts-node src/cli.ts serve",
        "lint": "eslint src/** tests/** --ext .js,.jsx,.ts,.tsx --no-error-on-unmatched-pattern"
    },
    "dependencies": {
        "@babel/core": "7.16.0",
        "@babel/plugin-transform-runtime": "7.16.4",
        "@babel/preset-env": "7.16.4",
        "@babel/preset-react": "7.16.0",
        "axios": "0.24.0",
        "babel-loader": "8.2.2",
        "commander": "7.1.0",
        "chalk": "4.1.0",
        "chokidar": "3.5.1",
        "css-loader": "6.5.1",
        "dom-serializer": "1.3.2",
        "domutils": "2.8.0",
        "express": "4.17.1",
        "glob": "7.1.6",
        "htmlparser2": "7.2.0",
        "js-yaml": "4.1.0",
        "prettier": "2.2.1",
        "react": "17.0.1",
        "react-dom": "17.0.1",
        "sambal-jsonld": "0.0.25",
        "sharp": "0.28.3",
        "shelljs": "0.8.4",
        "style-loader": "3.3.1",
        "webpack": "5.64.1",
        "webpack-node-externals": "3.0.0",
        "webpack-dev-middleware": "5.2.2",
        "ws": "7.4.6"
    },
    "devDependencies": {
        "@babel/preset-typescript": "7.16.0",
        "@types/express": "4.17.1",
        "@types/glob": "7.1.3",
        "@types/node": "16.11.7",
        "@types/jest": "25.2.1",
        "@types/js-yaml": "4.0.4",
        "@types/react": "17.0.2",
        "@types/prettier": "2.2.2",
        "@types/sharp": "0.27.1",
        "@types/shelljs": "0.8.5",
        "@types/webpack-node-externals": "2.5.3",
        "@types/ws": "7.4.0",
        "@typescript-eslint/parser": "4.16.1",
        "@typescript-eslint/eslint-plugin": "4.16.1",
        "babel-jest": "26.6.3",
        "eslint": "7.21.0",
        "jest": "25.5.4",
        "rimraf": "3.0.0",
        "ts-node": "10.4.0",
        "typescript": "4.5.2"
    }
}
