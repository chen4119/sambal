{
    "name": "sambal",
    "version": "0.0.45",
    "description": "A linked data static site generator",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/chen4119/sambal"
    },
    "author": "Wan Chun Chen",
    "license": "MIT",
    "keywords": [
        "schema.org",
        "semantic web",
        "json-ld",
        "linked data",
        "static site generator"
    ],
    "engines": {
        "node": ">=10.0.0"
    },
    "bin": {
        "sambal": "./bin/sambal"
    },
    "scripts": {
        "init": "ts-node src/cli.ts init",
        "start": "ts-node src/cli.ts build",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "build": "npm run clean && tsc",
        "clean": "rimraf ./dist",
        "serve": "ts-node src/cli.ts serve",
        "theme": "ts-node src/cli.ts theme",
        "lint": "eslint src/** tests/** --ext .js,.jsx,.ts,.tsx --no-error-on-unmatched-pattern"
    },
    "dependencies": {
        "@babel/core": "7.13.8",
        "@babel/plugin-transform-runtime": "7.13.9",
        "@babel/preset-env": "7.13.9",
        "@babel/preset-react": "7.12.13",
        "axios": "0.21.1",
        "babel-loader": "8.2.2",
        "commander": "7.1.0",
        "chalk": "4.1.0",
        "chokidar": "3.5.1",
        "css-loader": "5.1.1",
        "express": "4.17.1",
        "glob": "7.1.6",
        "htmlparser2": "6.0.1",
        "js-yaml": "4.0.0",
        "micromatch": "4.0.4",
        "prettier": "2.2.1",
        "react": "17.0.1",
        "react-dom": "17.0.1",
        "sambal-jsonld": "0.0.22",
        "sharp": "0.27.2",
        "shelljs": "0.8.4",
        "style-loader": "2.0.0",
        "typescript": "4.2.3",
        "webpack": "5.24.3",
        "webpack-node-externals": "2.5.2",
        "webpack-dev-middleware": "4.1.0",
        "ws": "7.4.6"
    },
    "devDependencies": {
        "@babel/preset-typescript": "7.13.0",
        "@types/express": "4.17.1",
        "@types/glob": "7.1.3",
        "@types/node": "13.13.2",
        "@types/jest": "25.2.1",
        "@types/js-yaml": "4.0.0",
        "@types/micromatch": "4.0.1",
        "@types/react": "17.0.2",
        "@types/prettier": "2.2.2",
        "@types/sharp": "0.27.1",
        "@types/shelljs": "0.8.5",
        "@types/ws": "7.4.0",
        "@typescript-eslint/parser": "4.16.1",
        "@typescript-eslint/eslint-plugin": "4.16.1",
        "babel-jest": "26.6.3",
        "eslint": "7.21.0",
        "jest": "25.5.4",
        "rimraf": "3.0.0",
        "ts-node": "9.1.1"
    }
}
